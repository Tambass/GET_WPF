<Window x:Class="GET_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GET_WPF"
        mc:Ignorable="d"
        Title="GET_MySQL" Height="450" Width="600">
    <Grid>
        <Button Content="Afficher" HorizontalAlignment="Left" Height="73" Margin="168,336,0,0" VerticalAlignment="Top" Width="270" Click="Button_Click"/>
        <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="10,22,0,107" Name="dataGridCategory" Width="575" ItemsSource="{Binding Path=LoadDataBinding}" CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=cat_id}" Header="Numéro" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=cat_title}" Header="Name" Width="100" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
